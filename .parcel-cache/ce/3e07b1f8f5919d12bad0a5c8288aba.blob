* {
  box-sizing: border-box;
  font-family: "Lato", sans-serif;
}

html,
body {
  margin: 0;
  padding: 0;
}

.intro-chunk {
  padding-top: 60px;
  padding-bottom: 40px;
  max-width: 300px;
}

header h1 {
  padding-bottom: 30px;
}

main {
  background-color: rgb(153, 153, 153);
  border-top: 5px solid rgb(102, 102, 102);
}

.max-width-wrapper {
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 60px;
  padding-bottom: 60px;
}

p > strong {
  color: rgb(0, 153, 102);
}

.card {
  background-color: white;
  border-bottom: 5px solid rgb(102, 102, 102);
  padding: 16px;
}

.indented-heading {
  background-color: rgb(254, 192, 0);
  border-bottom: 5px solid rgb(205, 153, 0);
}

